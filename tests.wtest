import rutinas.*

describe "rutinas"{
    
    test "calorías que quema una rutina de Running"{
        const correrEnLaPlaya = new Running(intensidad = 1.2, tiempo = 5)
        assert.equals(360, correrEnLaPlaya.caloriasQueQuema())
        correrEnLaPlaya.tiempo(90)
        assert.equals(10200, correrEnLaPlaya.caloriasQueQuema())
    }

    test "calorías que quema una rutina de Maratón"{
        const maratonDeBA = new Maraton(intensidad = 1.5, tiempo = 5)
        assert.equals(900, maratonDeBA.caloriasQueQuema())
        maratonDeBA.tiempo(90)
        assert.equals(25500, maratonDeBA.caloriasQueQuema())
    }

    test "calorías que quema una rutina de remo"{
        const remoEnElDelta = new Remo(intensidad = 1.3, tiempo = 5)
        assert.equals(520, remoEnElDelta.caloriasQueQuema())
        remoEnElDelta.tiempo(90)
        assert.equals(9360, remoEnElDelta.caloriasQueQuema())
    }

    test "calorías que quema una rutina de remo de competición"{
        const remoEnElCamino = new RemoDeCompeticion(intensidad = 1.7, tiempo = 5)
        assert.equals(510, remoEnElCamino.caloriasQueQuema())
        remoEnElCamino.tiempo(90)
        assert.equals(12750, remoEnElCamino.caloriasQueQuema())
    }

}