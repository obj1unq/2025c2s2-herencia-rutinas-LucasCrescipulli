import rutinas.*

describe "rutinas"{
    
    test "calorías que quema la rutina de Running"{
        const correrEnLaPlaya = new Running(intensidad = 1.2, tiempo = 5)
        assert.equals(360, correrEnLaPlaya.caloriasQueQuema())
        correrEnLaPlaya.tiempo(90)
        assert.equals(10200, correrEnLaPlaya.caloriasQueQuema())
    }

    test "calorías que quema la rutina de Maratón"{
        const maratonDeBA = new Maraton(intensidad = 1.5, tiempo = 5)
        assert.equals(900, maratonDeBA.caloriasQueQuema())
        maratonDeBA.tiempo(90)
        assert.equals(25500, maratonDeBA.caloriasQueQuema())
    }



}